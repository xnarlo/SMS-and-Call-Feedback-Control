<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Send SMS</title>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <h1>Send SMS</h1>
    <form id="smsForm">
        <input type="text" name="number" placeholder="Enter Phone Number" required>
        <textarea name="message" placeholder="Enter Message" required></textarea>
        <button type="submit">Send SMS</button>
    </form>

    <script>
        const socket = io();
        let totalParts = 0;
        let sentParts = 0;
        let failed = false;
    
        document.getElementById('smsForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const formData = new FormData(this);
            sentParts = 0; // Reset counter
            failed = false;
    
            fetch('/send', {
                method: 'POST',
                body: new URLSearchParams(formData)
            }).then(response => response.text())
              .then(data => {
                  console.log("📨 SMS sending started...");
              });
    
            // Listen for SMS status from Arduino
            socket.on('sms_status', (status) => {
                if (status === "SMS_SENT") {
                    sentParts++;
                    console.log(`✅ Part ${sentParts}/${totalParts} sent.`);
    
                    // If all parts are sent, show success alert
                    if (sentParts === totalParts) {
                        alert("✅ All SMS parts sent successfully!");
                    }
                } else if (status === "SMS_FAILED") {
                    failed = true;
                    alert("❌ SMS Sending Failed! Some messages may not have been sent.");
                }
            });
    
            // Fetch the total number of parts
            fetch('/get-message-parts')
                .then(response => response.json())
                .then(data => {
                    totalParts = data.totalParts;
                });
        });
    </script>
    
</body>
</html>
